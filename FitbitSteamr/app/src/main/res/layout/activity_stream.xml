<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#335499">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/logo2"/>
        <ImageView
            android:id="@+id/img1"
            android:layout_gravity="center_vertical"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/logo3"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_gravity="center_vertical"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/logo3"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_gravity="center_vertical"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/logo3"/>
    </LinearLayout>
    <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->
        <!--<TextView-->
            <!--android:id="@+id/data"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp" />-->
    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="STREAM ID:" />
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/stream_id"/>
        </LinearLayout>
        
        <EditText
            android:id="@+id/txt_streamID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:text="KEY:"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="243dp" />

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/key"/>
        </LinearLayout>



        <EditText
            android:id="@+id/txt_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="230dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_stream"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Stream"
            android:background="@drawable/btn_shape"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="334dp" />
        <Button
            android:background="@drawable/btn_shape"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/btn_stop"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_bottom2"
        android:layout_marginTop="50dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_fitbit2"
            android:layout_width="165dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/btn_shape2" />


        <Button
            android:layout_width="165dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_shape_push" />

        <ImageView
            android:elevation="1dp"
            android:layout_marginLeft="42.5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/fitbit"/>

        <ImageView
            android:elevation="1dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42.5dp"
            android:src="@mipmap/streamr" />

    </RelativeLayout>
</LinearLayout>