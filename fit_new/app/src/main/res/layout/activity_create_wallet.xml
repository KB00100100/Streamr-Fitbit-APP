<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wallet.CreateWalletActivity">
    <include layout="@layout/common_toolbar" />
    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_create"
        android:text="CREATE WALLET"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/InputLayoutStyle"
        android:id="@+id/input1"
        android:layout_below="@+id/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#6220EA"
        android:theme="@style/InputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Password"
            android:padding="15dp"
            android:textColor="#6220EA"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:theme="@style/InputLayoutStyle" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_create"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textColor="#CACACA"
        android:text="Set your password and create your Ethereum wallet in order to receive DATAcoin from Streamr."/>
</RelativeLayout>