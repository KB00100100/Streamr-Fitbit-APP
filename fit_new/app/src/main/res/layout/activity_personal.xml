<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:orientation="vertical"
tools:context=".ui.personal.PersonalActivity">

<include layout="@layout/common_toolbar" />

<com.google.android.material.textfield.TextInputLayout
    style="@style/InputLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="10dp"
    android:textColorHint="#6220EA"
    android:theme="@style/InputLayoutStyle">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Name"
        android:padding="15dp"
        android:textColor="#6220EA"
        android:textSize="16sp"
        android:theme="@style/InputLayoutStyle" />


</com.google.android.material.textfield.TextInputLayout>
<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/InputLayoutStyle"
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="#6220EA"
        android:theme="@style/InputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Gender"
            android:padding="15dp"
            android:textColor="#6220EA"
            android:textColorHint="#6220EA"
            android:textSize="16sp"
            android:theme="@style/InputLayoutStyle" />


    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv1"
        android:layout_alignBottom="@+id/tv1"
        />
</RelativeLayout>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/InputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="#6220EA"
        android:id="@+id/tv2"
        android:theme="@style/InputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Age"
            android:padding="15dp"
            android:textColor="#6220EA"
            android:textColorHint="#6220EA"
            android:textSize="16sp"
            android:theme="@style/InputLayoutStyle" />


    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:id="@+id/input2"
        android:layout_alignTop="@+id/tv2"
        android:layout_alignBottom="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>


<com.google.android.material.textfield.TextInputLayout
    style="@style/InputLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:textColorHint="#6220EA"
    android:theme="@style/InputLayoutStyle">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tv_race"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Race"
        android:padding="15dp"
        android:textColor="#6220EA"
        android:textColorHint="#6220EA"
        android:textSize="16sp"
        android:theme="@style/InputLayoutStyle" />


</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    style="@style/InputLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:textColorHint="#6220EA"
    android:theme="@style/InputLayoutStyle">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tv_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Region"
        android:padding="15dp"
        android:textColor="#6220EA"
        android:textColorHint="#6220EA"
        android:textSize="16sp"
        android:theme="@style/InputLayoutStyle" />


</com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_view_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/view_personal_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="VIEW DATA"/>
        <Button
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:background="@drawable/view_personal_bg"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="DONE"/>
    </LinearLayout>

</LinearLayout>